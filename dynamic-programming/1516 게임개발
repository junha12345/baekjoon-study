import sys
from collections import deque
input = sys.stdin.readline

dp = [0]*(n+1) # 건물짓는데 소요시간 최종
poss = [[0]*(n+1) for _ in range(n+1)] # 필요건물 1 = 필요, 0 = 불필요
t = [0]*(n+1) # 건물 소요시간
indegree = [0]*(n+1)
n = int(input())
for i in range(1, n+1) :
    _input = list(map(int, input().split()))
    t[i] = _input[0]
    for x in _input[1:] :
        poss[i][x] = 1
        indegree[x] += 1

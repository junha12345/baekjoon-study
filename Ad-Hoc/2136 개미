import sys
input = sys.stdin.readline

n,l = map(int, input().split())
nlist = [] # ê±°ë¦¬,idx
cnt,d1,d2 = 0,0,0
for i in range(1,n+1) :
    x = int(input())
    if x<0 :
        cnt += 1
        nlist.append([abs(x),i])
        d1 = max(d1,abs(x))
    else :
        nlist.append([abs(x),i])
        d2 = max(d2,l-abs(x))
nlist.sort(key=lambda x: x[0])
if d1>d2 : print(nlist[cnt-1][1],d1)
else : print(nlist[-(n-cnt)][1],d2)
